<h2><%= link_to @task.action, tasks_path %></h2>

<p>
  <strong>de-tail:</strong>
  <%= @task.description %>
</p>


<% if @task.completion_date %>
  <p>
    <strong class="complete">COMPLET_DATE:</strong> <%= @task.completion_date %>
  </p>
<% end %>

<p>
  <%= link_to "edit", edit_task_path(@task.id) %>
  //
  <%= link_to "del", task_path(@task.id),
      method: :delete,
      data: { confirm: 'ur sure?' } %>
  //
  <%= link_to "(go_back)", tasks_path %>
</p>
